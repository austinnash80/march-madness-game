<div class="card">
  <div class="card-body">
    <%= link_to 'Add', new_user_path(), class:'btn btn-primary' %>
    <h1>Users</h1>
    <table class="table border table-hover">
        <thead class="table-light">
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |i| %>
        <tr>
          <td><%= i.id %></td>
          <td><%= i.email.titlecase %></td>
          <td><%= link_to 'Edit', edit_user_path(id: i.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

